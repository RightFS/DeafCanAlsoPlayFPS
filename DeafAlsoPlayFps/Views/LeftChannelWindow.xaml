<Window x:Class="DeafAlsoPlayFps.Views.LeftChannelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="左声道可视化"
        Width="60"
        Height="400"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStyle="None"
        WindowStartupLocation="Manual">
    
    <Grid>
        <!-- 左声道能量条 -->
        <Border x:Name="LeftChannelContainer" 
                Width="50" 
                Height="380" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="#20000000"
                BorderBrush="#40FFFFFF"
                BorderThickness="1"
                CornerRadius="25">
            <Grid>
                <!-- 背景刻度线 -->
                <Canvas>
                    <Rectangle Width="46" Height="1" Canvas.Top="38" Fill="#30FFFFFF" />
                    <Rectangle Width="46" Height="1" Canvas.Top="76" Fill="#30FFFFFF" />
                    <Rectangle Width="46" Height="1" Canvas.Top="114" Fill="#30FFFFFF" />
                    <Rectangle Width="46" Height="1" Canvas.Top="152" Fill="#30FFFFFF" />
                    <Rectangle Width="46" Height="1" Canvas.Top="190" Fill="#30FFFFFF" />
                    <Rectangle Width="46" Height="1" Canvas.Top="228" Fill="#30FFFFFF" />
                    <Rectangle Width="46" Height="1" Canvas.Top="266" Fill="#30FFFFFF" />
                    <Rectangle Width="46" Height="1" Canvas.Top="304" Fill="#30FFFFFF" />
                    <Rectangle Width="46" Height="1" Canvas.Top="342" Fill="#30FFFFFF" />
                </Canvas>
                
                <!-- 能量条 -->
                <Rectangle x:Name="LeftChannelBar"
                           Width="40"
                           Height="{Binding ChannelHeight}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Bottom"
                           Margin="0,0,0,20">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                            <GradientStop Color="#FF00FF00" Offset="0"/>
                            <GradientStop Color="#FFFFFF00" Offset="0.6"/>
                            <GradientStop Color="#FFFF0000" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                
                <!-- 左声道标签 -->
                <TextBlock Text="L"
                           Foreground="White"
                           FontSize="12"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           Margin="0,5,0,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>

